<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="QuizStyle" parent="AppThemeNoActionBar">
        <item name="colorAccent">@color/blue_question</item>
    </style>

    <style name="AppThemeNoBars" parent="AppThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="HorizontalDivider" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="VerticalDivider" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="LoginInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">flagForceAscii</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/login_input_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CourseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BoldCourseTextStyle" parent="CourseTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GrayCourseTextStyle" parent="CourseTextStyle">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="CardTaskStyle" parent="CourseTextStyle">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProfileEditTextStyle" parent="CourseTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@drawable/edittext_selector</item>
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="ProfileLabelStyle" parent="ProfileEditTextStyle">
        <item name="android:textSize">@dimen/label_text</item>
        <item name="android:layout_marginLeft">@dimen/double_margin</item>
        <item name="android:layout_marginTop">@dimen/regular_margin</item>
        <item name="android:drawablePadding">@dimen/double_margin</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="InputLayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/profile_left_margin</item>
        <item name="android:layout_marginTop">@dimen/regular_margin</item>
    </style>

    <style name="ProfileButton">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/double_margin</item>
        <item name="android:layout_marginBottom">@dimen/regular_margin</item>
        <item name="android:elevation">@dimen/regular_elevation</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/label_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
